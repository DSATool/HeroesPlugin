<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import dsatool.ui.ReactiveSpinner?>

<VBox fx:id="root" style="-fx-padding: 2, 2, 2, 2;" spacing="2" xmlns:fx="http://javafx.com/fxml" >
   <HBox spacing="2" alignment="CENTER_LEFT" >
      <Label text="Name: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <TextField fx:id="name" prefWidth="200" />
   </HBox>
   <HBox fx:id="headBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Kopf RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="head" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="breastBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Brust RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="breast" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="backBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Rücken RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="back" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="bellyBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Bauch RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="belly" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="larmBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Linker Arm RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="larm" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="rarmBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Rechter Arm RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="rarm" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="llegBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Linkes Bein RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="lleg" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="rlegBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="Rechtes Bein RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="rleg" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>
   <HBox fx:id="zonersBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="zoners" dmin="0.0" dmax="99.0" initialValue="0.0" amountToStepBy="0.05" editable="true" prefWidth="80" />
   </HBox>
   <HBox fx:id="zonebeBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="BE: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="zonebe" dmin="0.0" dmax="99.0" initialValue="0.0" amountToStepBy="0.05" editable="true" prefWidth="80" />
   </HBox>
   <HBox fx:id="totalrsBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="RS: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="totalrs" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>   
   <HBox fx:id="totalbeBox" spacing="2" alignment="CENTER_LEFT" visible="false" >
      <Label text="BE: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="totalbe" imin="0" imax="99" editable="true" prefWidth="55" />
   </HBox>   
   <HBox spacing="2" alignment="CENTER_LEFT" >
      <Label text="Zusatzrüstung: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <CheckBox fx:id="additionalArmor" />
   </HBox>
   <HBox spacing="2" alignment="CENTER_LEFT" >
      <Label text="Gewicht: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="weight" dmin="0.0" dmax="999.0" initialValue="0.0" amountToStepBy="0.05" editable="true" prefWidth="80" />
   </HBox>
   <HBox spacing="2" alignment="CENTER_LEFT" >
      <Label text="Anmerkungen: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <TextField fx:id="notes" prefWidth="200" />
   </HBox>
   <HBox spacing="2" alignment="CENTER_LEFT" >
      <Label maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <Button fx:id="okButton" text="Ok" prefWidth="75" />
      <Button fx:id="cancelButton" text="Abbrechen" prefWidth="75" />
   </HBox>
</VBox>