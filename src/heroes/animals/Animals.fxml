   <VBox fx:id="animalsBox" spacing="2" maxWidth="Infinity" fillWidth="true">
      <HBox spacing="2" >
         <Button text="Vertrautentier hinzufügen" onAction="#addAnimal" />
         <Button text="Reittier hinzufügen" onAction="#addAnimal" />
         <Button text="Sonstiges Tier hinzufügen" onAction="#addAnimal" />
         <VBox.margin>
            <Insets>
               <left>2</left>
            </Insets>
         </VBox.margin>
      </HBox>
   </VBox>
</ScrollPane>