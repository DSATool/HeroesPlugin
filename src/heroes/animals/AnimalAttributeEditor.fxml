<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import dsatool.ui.ReactiveSpinner?>

<VBox fx:id="root" style="-fx-padding: 2, 2, 2, 2;" spacing="2" xmlns:fx="http://javafx.com/fxml" >
   <HBox spacing="2" >
      <Label text="Modifikator: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="modifier" imin="-999" imax="999" editable="true" prefWidth="80" />
   </HBox>
   <HBox fx:id="startBox" spacing="2" >
      <Label text="Startwert: " maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <ReactiveSpinner fx:id="start" imin="0" imax="99" editable="true" prefWidth="80" />
   </HBox>
   <HBox spacing="2" >
      <Label maxWidth="Infinity" HBox.hgrow="ALWAYS" />
      <Button fx:id="okButton" text="Ok" prefWidth="75" />
      <Button fx:id="cancelButton" text="Abbrechen" prefWidth="75" />
   </HBox>
</VBox>